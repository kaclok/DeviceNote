<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".logic.activity.SubmitActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- 标题 -->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="巡检点名称"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 01 巡检人员姓名 -->
        <TextView
            android:id="@+id/tv_label_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="* 01  巡检人员姓名"
            android:textColor="#333333"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:hint="请输入"
            android:background="@android:drawable/edit_text"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:singleLine="true"
            android:maxLength="125"
            app:layout_constraintTop_toBottomOf="@id/tv_label_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 02 异常数量 -->
        <TextView
            android:id="@+id/tv_label_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="* 02  该巡检点异常数量"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/et_name"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/et_count"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:hint="请输入"
            android:inputType="number"
            android:digits="0123456789"
            android:maxLength="5"
            android:background="@android:drawable/edit_text"
            android:padding="12dp"
            android:layout_marginTop="8dp"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:text="0"
            app:layout_constraintTop_toBottomOf="@id/tv_label_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 03 巡检点详情 -->
        <TextView
            android:id="@+id/tv_label_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="* 03  该巡检点详情"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/et_count"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/et_detail"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:hint="请输入巡检详情"
            android:gravity="top"
            android:background="@android:drawable/edit_text"
            android:padding="12dp"
            android:maxLength="999"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_label_3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:inputType="textMultiLine"
            android:minLines="7"
            android:textSize="10sp"/>

        <!-- 提交按钮（紧贴第三个输入框下方） -->
        <Button
            android:id="@+id/btn_submit"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:text="提交"
            android:textColor="@android:color/white"
            android:backgroundTint="#2979FF"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintTop_toBottomOf="@id/et_detail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
