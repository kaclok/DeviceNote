<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="@android:color/transparent"
    tools:context=".NFCScanActivity">

    <!-- 下半部分：扫描卡片 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        app:cardBackgroundColor="#2A2A2A"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- 标题栏 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="已准备好扫描"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <!-- 副标题 -->
            <TextView
                android:id="@+id/subtitle_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:text="贴近 NFC 标签"
                android:textColor="#888888"
                android:textSize="14sp"
                android:gravity="center"/>

            <!-- NFC扫描动画区域 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="32dp"
                android:gravity="center">

                <!-- 外圈动画 -->
                <View
                    android:id="@+id/pulse_circle"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/circle_pulse"
                    android:alpha="0.6" />

                <!-- 手机图标容器 -->
                <FrameLayout
                    android:id="@+id/phone_container"
                    android:layout_width="100dp"
                    android:layout_height="130dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/phone_background">

                    <!-- 手机边框图标 -->
                    <View
                        android:id="@+id/phone_icon"
                        android:layout_width="60dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:background="@drawable/phone_outline" />

                    <!-- 成功图标（初始隐藏） -->
                    <ImageView
                        android:id="@+id/success_icon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_check_24px"
                        android:visibility="gone"
                        android:contentDescription="扫描成功" />

                </FrameLayout>

                <!-- 成功提示文字 -->
                <TextView
                    android:id="@+id/success_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/phone_container"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="16dp"
                    android:text="扫描成功"
                    android:textColor="#4CAF50"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

            </RelativeLayout>

            <!-- 取消按钮 -->
            <Button
                android:id="@+id/cancel_button"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/button_background"
                android:text="取消"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>