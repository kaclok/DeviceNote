<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 透明背景 -->
    <solid android:color="@android:color/transparent" />

    <!-- 黑色圆角边框 -->
    <stroke
        android:width="1dp"
        android:color="#000000" />

    <!-- 圆角大小 -->
    <corners android:radius="8dp" />

    <!-- 内边距，避免文字贴边 -->
    <padding
        android:bottom="6dp"
        android:left="12dp"
        android:right="32dp"
        android:top="6dp" />
</shape>
